{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "types/*": ["types/*"],
      "types": ["types"],
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "hooks": ["src/hooks"],
      "firebaseconfig/*": ["src/firebaseconfig/*"],
      "firebaseconfig": ["src/firebaseconfig"],
      "pages/*": ["src/pages/*"],
      "store/*": ["src/store/*"],
      "styles/*": ["src/styles/*"],
      "utils/*": ["src/utils/*"],
      "config/*": ["src/config/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
